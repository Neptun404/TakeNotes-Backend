generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch", "fullTextIndex"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int      @id @default(autoincrement())
  username String   @unique
  password String
  notes    Note[]
  Folder   Folder[]
}

model Note {
  id      Int      @id @default(autoincrement())
  title   String
  content String   @db.LongText
  owner   User     @relation(fields: [ownerId], references: [id])
  ownerId Int
  tags    Tag[]
  Folders Folder[]

  @@fulltext([title])
  @@fulltext([content])
  @@fulltext([title, content])
}

model Tag {
  id    Int    @id @default(autoincrement())
  name  String @unique
  notes Note[]
}

model Folder {
  id      Int    @id @default(autoincrement())
  name    String
  owner   User   @relation(fields: [ownerId], references: [id])
  ownerId Int
  notes   Note[]
}
